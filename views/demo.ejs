<!DOCTYPE html>
<html lang="<%= req.getLocale() %>"><head>
  <meta charset="utf-8">
  <title><%= __('signup.title') %></title>
  <meta name="keywords" content="<%= __('signup.meta.keywords') %>">
  <meta name="description" content="<%= __('signup.meta.description') %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <!-- Styles -->
  <link rel="stylesheet" href="vendors/snow/css/font-awesome.min.css">
  <link rel="stylesheet" href="vendors/snow/css/animate.min.css">
  <link href='http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900|Montserrat:400,700' rel='stylesheet' type='text/css'>


  <link rel="stylesheet" href="vendors/snow/css/bootstrap.min.css">
  <link rel="stylesheet" href="vendors/snow/css/main.min.css">

  <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />

  <script src="vendors/snow/js/modernizr-2.7.1.min.js"></script>

</head>

<body style="background: #f2f2f2">

    <header style="padding-bottom: 0px; background: #f2f2f2; height: auto;">
      <div class="container">
      	<div class="row">
          <div class="col-xs-6">
            <a href="/"><img style="height: 40px" src="vendors/snow/img/logo_black.svg" alt="Logo"></a>
          </div>
        </div>
        <div class="row" style="padding-top: 60px;">
          <form role="form" action="/demo" method="post">
	          <div class="col-sm-12 text-center">
	          	<div class="row">
		            <h2 class="black"><%= __('demo.offer.title') %></h2>
		            <br />
	  						<p class="black"><%= __('demo.offer.step11') %></p>
	  						<br />
	  						<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
		  						<div class="form-group">
		          			<input type="text" class="form-control" name="channel" placeholder="<%= __('demo.offer.step12') %>" required>
		          		</div>
			          	<br />
			            <ol style="list-style-type: none;">
			            	<li>
					            <p class="black"><%= __('demo.offer.step21') %>&nbsp;<a href="#"><u><b>gopaydemo_bot</b></u></a>&nbsp;<%= __('demo.offer.step22') %></p>
			            	</li>
			            	<li>
					            <p class="black"><%= __('demo.offer.step3') %></p>
			            	</li>
			            	<li>
					            <p class="black"><%= __('demo.offer.step4') %></p>
			            	</li>
			            </ol>
			            <br />
		          	</div>
		          </div>
	            
	            <div class="row">
	              <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
	                	<div class="form-group">
				              <input type="text" class="form-control" name="name" placeholder="<%= __('offer.name') %>" required>
					          </div>

										<div class="form-group">
				              <input name="image" class="form-control" type="url" placeholder="<%= __('offer.image') %>" required>
					          </div>

										<div class="form-group">
				              <input name="price" class="form-control" type="number" placeholder="<%= __('offer.price') %>" required>
					          </div>

										<div class="form-group">
				              <textarea name="description" rows="3" class="form-control" placeholder="<%= __('offer.description') %>" required></textarea>
					          </div>

	                  <button type="submit" class="btn btn-primary btn-lg"><%= __('offer.modal.confirm') %></button>
	              </div>
	            </div><!--End Form row-->

	          </div>
          </form>

        </div>
        <div class="row" style="padding-top: 60px;">
          <div class="col-sm-6 text-center" style="color: #929496">
            <p><small><%= __('signup.footer.all_rights_reserved') %></small></p>
            <ul class="list-inline social">
              <li><%= __('signup.footer.social') %></li>
              <li><a href="#"><i class="fa fa-twitter"></i></a></li>
              <li><a href="#"><i class="fa fa-facebook"></i></a></li>
              <li><a href="#"><i class="fa fa-paper-plane"></i></a></li>
              <li><a href="#"><i class="fa fa-instagram"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <!-- Javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="vendors/snow/js/jquery-1.11.0.min.js"><\/script>')</script>
    <script src="vendors/snow/js/wow.min.js"></script>
    <script src="vendors/snow/js/bootstrap.min.js"></script>
    <script src="vendors/snow/js/main.js"></script>

    </body>
</html>
